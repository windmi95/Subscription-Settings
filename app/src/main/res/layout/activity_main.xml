<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background_color"
    >

    <TextView
        android:id="@+id/가입인사"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_hello"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0"
        android:textSize="24sp"
        android:lineSpacingExtra ="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/noto_re"
        android:textColor="@color/join_color"
        />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/가입인사"
        app:layout_constraintStart_toStartOf="@id/가입인사"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="6자이내/특수문자 입력 불가"
        android:fontFamily="@font/noto_re"
        android:ems="10"
        android:textSize="14sp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/nickname_border"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="30dp"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        />
    
    <android.widget.Button
        android:id="@+id/next_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        android:background="@drawable/button_style"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>